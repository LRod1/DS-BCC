{
    "manifest_version": 2,
    "name": "DS-BCC",
    "description": "__MSG_manDescr__",
    "version": "1.0.7",
    "author": "Lars Stintzing",
    "applications": {
        "gecko": {
            "id": "l-rod@gmx.net",
            "strict_min_version": "91.0"
        }
    },
    "permissions": [
        "compose",
        "storage",
        "notifications",
        "accountsFolders",
        "accountsRead",
        "messagesRead",
        "messagesDelete",
        "addressBooks"
    ],
    "background": {
        "scripts": [
            "scripts/beforeSend.js",
            "scripts/options.js"
        ]
    },
    "icons": {
        "64": "images/internet.png",
        "32": "images/internet-32px.png",
        "16": "images/internet-16px.png"
    },
    "browser_action": {
        "default_title": "__MSG_manOptionsTitle__",
        "default_icon": "images/internet-32px.png"
    },
    "compose_action": {
        "default_popup": "scripts/popup.html",
        "default_title": "__MSG_manComposeTitle__"
    },
    "default_locale":  "en"
}